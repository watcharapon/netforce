<form model="ecom2.cart">
    <head>
        <field name="state"/>
        <button string="Options" dropdown="1">
            <item string="Copy To Sales Order" method="copy_to_sale"/>
        </button>
    </head>
    <tabs>
        <tab string="General">
            <field name="number"/>
            <field name="date"/>
            <field name="customer_id"/>
            <field name="delivery_date"/>
            <field name="ship_address_id" condition='[["contact_id","=",customer_id]]'/>
            <field name="delivery_slot_id"/>
            <field name="bill_address_id" condition='[["contact_id","=",customer_id]]'/>
            <field name="pay_method_id"/>
            <field name="lines">
                <list>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="weight"/>
                    <field name="unit_price"/>
                    <field name="qty"/>
                    <field name="uom_id"/>
                    <field name="amount"/>
                    <field name="delivery_date"/>
                    <field name="ship_address_id" condition='[["contact_id","=",customer_id]]'/>
                    <field name="delivery_slot_id"/>
                </list>
            </field>
            <field name="amount_total"/>
            <field name="state"/>
        </tab>
        <tab string="Other">
        </tab>
    </tabs>
    <related>
        <field name="sale_orders"/>
        <field name="logs"/>
    </related>
</form>
