<form model="email.template">
    <tabs>
        <tab string="General">
            <field name="name"/>
            <newline/>
            <field name="from_addr"/>
            <newline/>
            <field name="to_addrs"/>
            <newline/>
            <field name="cc_addrs"/>
            <newline/>
            <field name="subject"/>
            <newline/>
            <field name="body" width="800" height="500" wysi="1"/>
            <newline/>
            <field name="attachments"/>
        </tab>
        <tab string="Links">
            <field name="contact"/>
            <newline/>
            <field name="related"/>
        </tab>
    </tabs>
    <related>
        <field name="comments"/>
    </related>
</form>
