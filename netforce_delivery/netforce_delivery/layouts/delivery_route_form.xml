<form model="delivery.route">
    <head>
        <field name="state"/>
        <button string="Print" icon="print" action="report_delivery_route_form"/>
    </head>
    <group form_layout="stacked">
        <field name="number" span="2"/>
        <field name="date" span="2"/>
        <field name="carrier_id" span="2"/>
        <field name="ref" span="2"/>
        <field name="depart_time" span="2"/>
        <field name="return_time" span="2"/>
    </group>
    <field name="lines">
        <list>
            <field name="sequence"/>
            <field name="picking_id"/>
            <field name="contact_id"/>
            <field name="ship_address_id"/>
            <field name="delivery_slot_id"/>
            <field name="state"/>
        </list>
    </field>
    <field name="state"/>
</form>
