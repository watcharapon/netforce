<form model="project">
    <head>
        <field name="state"/>
        <button string="Options" dropdown="1">
            <item string="Create Actual Cost Tracking Code" method="create_track"/>
            <item string="Create Estimate Cost Tracking Code" method="create_est_track"/>
            <divider/>
            <item string="Copy" method="copy"/>
        </button>
    </head>
    <tabs string="General">
        <tab string="General">
            <field name="name"/>
            <field name="number"/>
            <field name="contact_id"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="state"/>
            <field name="description"/>
            <field name="resources"/>
        </tab>
        <tab string="Costing">
            <separator string="Estimate Costs"/>
            <field name="est_track_id"/>
            <field name="est_track_balance"/>
            <field name="est_sub_tracks" readonly="1">
                <list>
                    <field name="self_id"/>
                    <field name="balance"/>
                </list>
            </field>
            <separator string="Actual Costs"/>
            <field name="track_id"/>
            <field name="track_balance"/>
            <field name="sub_tracks" readonly="1">
                <list>
                    <field name="self_id"/>
                    <field name="balance"/>
                </list>
            </field>
        </tab>
    </tabs>
    <related>
        <field name="milestones"/>
        <field name="jobs"/>
        <field name="tasks"/>
        <field name="work_time"/>
        <field name="issues"/>
        <field name="documents">
            <list>
                <field name="file" target="_blank"/>
                <field name="categ_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="expiry_date"/>
            </list>
            <form>
                <field name="categ_id"/>
                <field name="file" target="_blank" onchange="onchange_file"/>
                <field name="date"/>
                <field name="description"/>
                <field name="expiry_date"/>
            </form>
        </field>
        <field name="claims"/>
        <field name="borrows"/>
        <field name="comments"/>
    </related>
</form>
