<form model="job.template">
    <head>
        <button string="Options" dropdown="1">
            <item string="Copy" method="copy"/>
            <item string="Copy To Quotation" action="service_create_quot"/>
        </button>
    </head>
    <field name="name"/>
    <field name="product_id"/>
    <field name="description"/>
    <field name="service_type_id"/>
    <field name="skill_level_id"/>
    <separator string="Worksheet"/>
    <field name="lines" nolabel="1">
        <list>
            <field name="type"/>
            <field name="product_id" onchange="onchange_product"/>
            <field name="description"/>
            <field name="qty" onchange="update_total"/>
            <field name="uom_id"/>
            <field name="unit_price" onchange="update_total"/>
            <field name="amount"/>
        </list>
    </field>
    <group offset="8" span="4" columns="1">
        <field name="amount_labor"/>
        <field name="amount_part"/>
        <field name="amount_other"/>
        <field name="amount_total"/>
    </group>
    <related>
        <field name="comments"/>
    </related>
</form>
