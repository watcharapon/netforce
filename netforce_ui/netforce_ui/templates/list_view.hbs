{{#if options.show_full}}
    <div class="page-header nf-page-header">
        <h1>{{options.string}}</h1>
    </div>
    {{view "inline_help" action=options.action_name context=context}}
    {{view "flash" context=context}}
    <div class="btn-toolbar nf-btn-toolbar">
        {{{call ../render_list_top context}}}
    </div>
    {{#if tabs}}
        <ul class="nav nav-tabs nf-nav-tabs">
            {{#each ../tabs context=context}}
                <li data-tab="{{tab_no}}">
                    <a href="#">{{string}}</a>
                </li>
            {{/each}}
        </ul>
    {{/if}}
    {{#if show_list}}
        <div class="search"></div>
    {{/if}}
{{else}}
    {{#if options.show_search}}
        <div class="search"></div>
    {{/if}}
    {{view "flash" context=context}}
{{/if}}
{{#if show_list}}
    <div class="btn-toolbar nf-btn-toolbar">
        {{{call render_list_head context}}}
    </div>
    {{view "list" cols=cols group_fields=group_fields navigate=true colors=colors noselect=noselect header_scroll=header_scroll active_id=active_id on_click_item=on_click_item context=context}}
{{/if}}
