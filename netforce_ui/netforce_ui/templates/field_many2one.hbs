{{#unless options.nolabel}}
    <label class="control-label {{#if horizontal}}col-sm-4{{/if}}">
        <span class="label-text">
        {{t string}}
        {{#if options.help}}
            <a href="#" class="help" data-toggle="toolip" data-placement="top" title data-original-title="{{options.help}}"><sup>?</sup></a>
        {{/if}}
        </span>
    </label>
{{/unless}}
{{#if default_value}}
    <small>
        <span class="field-default glyphicon glyphicon-ok-sign" style="color:#3679b3"></span>
    </small>
{{/if}}
<div class="{{#if horizontal}}col-sm-8{{/if}} nf-controls">
    {{#if readonly}}
        <span{{#if input}} class="uneditable-input {{#if options.size}}input-{{options.size}}{{/if}}"{{/if}}>
            {{value_name}}
            {{#if link_url}}
                <a href="{{link_url}}" target="_blank" style="text-decoration:none;margin-left:5px"><i class="icon-arrow-right"></i></a>
            {{/if}}
        </span>
    {{else}}
        <div class="input-group">
            <input type="text" value="{{value_name}}" class="form-control select-input {{#if options.span}}span{{options.span}}{{/if}} {{#if options.size}}input-{{options.size}}{{/if}}" autocomplete="off" {{#if disabled}}disabled{{/if}}/>
            <span class="input-group-btn">
                {{#if link_url}}
                    <a href="{{link_url}}" target="_blank" class="btn btn-default" tabindex="-1">
                        <i class="icon-arrow-right"></i>
                    </a>
                {{/if}}
                <button type="button" class="btn btn-default nf-m2o-dropdown" tabindex="-1">
                    <span class="caret"></span>
                </button>
            </span>
        </div>
    {{/if}}
</div>
