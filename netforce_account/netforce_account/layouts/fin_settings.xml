<form model="settings" title="Financial Settings">
    <separator string="Currency"/>
    <field name="currency_id"/>
    <separator string="Fiscal Year"/>
    <field name="year_end_day"/>
    <field name="year_end_month"/>
    <field name="lock_date"/>
    <separator string="Accounts"/>
    <field name="account_receivable_id" condition='[["company_id","=",context.company_id]]'/>
    <field name="tax_receivable_id"/>
    <field name="account_payable_id" condition='[["company_id","=",context.company_id]]'/>
    <field name="tax_payable_id"/>
    <field name="currency_gain_id" condition='[["company_id","=",context.company_id]]'/>
    <field name="currency_loss_id" condition='[["company_id","=",context.company_id]]'/>
    <field name="unpaid_claim_id" condition='[["company_id","=",context.company_id]]'/>
    <field name="retained_earnings_account_id" condition='[["company_id","=",context.company_id]]'/>
    <field name="rounding_account_id" condition='[["company_id","=",context.company_id]]'/>
    <separator string="Journals"/>
    <field name="sale_journal_id"/>
    <field name="purchase_journal_id"/>
    <field name="pay_in_journal_id"/>
    <field name="pay_out_journal_id"/>
    <field name="general_journal_id"/>
    <separator string="Tax"/>
    <field name="tax_no"/>
    <field name="branch_no"/>
</form>
