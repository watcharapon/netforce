<list model="account.invoice" action="view_invoice">
    <top replace="1">
        <button string="New Invoice" perm_crud="create" action="supp_invoice" action_options='{"mode":"form","form_view_xml":"supp_invoice_form","defaults":{"type":"in","inv_type":"invoice"}}' icon="plus-sign"/>
        <button string="New Credit Note" perm_crud="create" action="supp_invoice" action_options='{"mode":"form","form_view_xml":"supp_credit_form","defaults":{"type":"in","inv_type":"credit"}}' icon="plus-sign"/>
        <button string="New Debit Note" perm_crud="create" action="supp_invoice" action_options='{"mode":"form","form_view_xml":"supp_debit_form","defaults":{"type":"in","inv_type":"debit"}}' icon="plus-sign"/>
        <button string="Import" action="import_data" action_options='{"import_model":"account.invoice","next":"supp_invoice"}' icon="download"/>
    </top>
    <field name="number"/>
    <field name="ref"/>
    <field name="inv_type"/>
    <field name="contact_id"/>
    <field name="date"/>
    <field name="due_date"/>
    <field name="amount_paid"/>
    <field name="amount_due"/>
    <field name="currency_id"/>
    <field name="memo"/>
    <field name="state"/>
</list>
