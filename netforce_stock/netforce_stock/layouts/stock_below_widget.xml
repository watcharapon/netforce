<list model="stock.balance" colors='{"#f66":[["below_min","=",true]]}'>
    <head replace="1">
        <button string="New Purchase Request" perm_model="purchase.request,create" method="make_pr" icon="plus-sign"/>
        <button string="New Purchase Order" perm_model="purchase.order,create" method="make_po" icon="plus-sign"/>
        <button string="New Production Order" perm_model="production.order,create" method="make_mo" icon="plus-sign"/>
    </head>
    <field name="location_id"/>
    <field name="product_id"/>
    <field name="qty_phys"/>
    <field name="qty_virt"/>
    <field name="min_qty"/>
    <field name="below_min" invisible="1"/>
</list>
